modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Plugin"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Plugin"

[[workflows.workflow]]
name = "Run Plugin"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node plugin.js"

[[workflows.workflow]]
name = "Test Plugin"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node --experimental-modules plugin.mjs"

[deployment]
run = ["sh", "-c", "node --experimental-modules plugin.mjs"]
